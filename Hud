local RainbowUI = {}
RainbowUI.__index = RainbowUI

local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")

local function rainbowColor(speed, sat, val)
    sat = sat or 1
    val = val or 1
    return Color3.fromHSV((tick() * speed) % 1, sat, val)
end

function RainbowUI:CreateWindow(width, height)
    width, height = width or 230, height or 120

    local sg = Instance.new("ScreenGui")
    sg.Name = "RainbowUI"
    sg.ResetOnSpawn = false
    sg.IgnoreGuiInset = true
    if syn and syn.protect_gui then syn.protect_gui(sg) end
    sg.Parent = game:GetService("Players").LocalPlayer.PlayerGui

    local frame = Instance.new("Frame")
    frame.Name = "MainFrame"
    frame.Size = UDim2.new(0, width, 0, height)
    frame.Position = UDim2.fromOffset(160, 180)
    frame.BackgroundTransparency = 1
    frame.Parent = sg

    local borders = {}
    for _,side in ipairs({"Top","Bottom","Left","Right"}) do
        local f = Instance.new("Frame")
        f.Parent = frame
        f.Name = side
        f.BorderSizePixel = 0
        f.ZIndex = 3
        if side=="Top" then
            f.Size, f.Position = UDim2.new(1,0,0,2), UDim2.new(0,0,0,-2)
        elseif side=="Bottom" then
            f.Size, f.Position = UDim2.new(1,0,0,2), UDim2.new(0,0,1,0)
        elseif side=="Left" then
            f.Size, f.Position = UDim2.new(0,2,1,0), UDim2.new(0,-2,0,0)
        elseif side=="Right" then
            f.Size, f.Position = UDim2.new(0,2,1,0), UDim2.new(1,0,0,0)
        end
        f.BackgroundColor3 = Color3.fromRGB(255,0,0)
        table.insert(borders, f)
    end

    local bg = Instance.new("Frame")
    bg.Name = "BG"
    bg.BackgroundColor3 = Color3.fromRGB(12, 13, 21)
    bg.BorderSizePixel = 0
    bg.Size = UDim2.new(1,0,1,0)
    bg.Position = UDim2.new(0,0,0,0)
    bg.ZIndex = 1
    bg.Parent = frame

    local bar = Instance.new("Frame")
    bar.Name = "Bar"
    bar.BackgroundColor3 = Color3.fromRGB(20, 20, 32)
    bar.Size = UDim2.new(1, 0, 0, 26)
    bar.BorderSizePixel = 0
    bar.Parent = bg
    bar.ZIndex = 2
    bar.Active = true 

    local title = Instance.new("TextLabel")
    title.Name = "Title"
    title.Size = UDim2.new(1, -60, 1, 0)
    title.Position = UDim2.new(0, 28, 0, 0)
    title.BackgroundTransparency = 1
    title.Text = "SCRIPTðŸ˜ˆLUIS"
    title.Font = Enum.Font.GothamBold
    title.TextSize = 19
    title.TextStrokeTransparency = 0.8
    title.TextColor3 = Color3.fromRGB(255,255,255)
    title.TextXAlignment = Enum.TextXAlignment.Left
    title.Parent = bar
    title.ZIndex = 3

    local collapseBtn = Instance.new("TextButton")
    collapseBtn.Name = "CollapseBtn"
    collapseBtn.Text = "â€”" 
    collapseBtn.Size = UDim2.new(0, 22, 0, 22)
    collapseBtn.AnchorPoint = Vector2.new(1, 0.5)
    collapseBtn.Position = UDim2.new(1, -8, 0.5, 0)
    collapseBtn.BackgroundColor3 = Color3.fromRGB(42, 0, 20)
    collapseBtn.BorderSizePixel = 0
    collapseBtn.TextSize = 14
    collapseBtn.Font = Enum.Font.GothamBold
    collapseBtn.TextColor3 = Color3.fromRGB(255,100,100)
    collapseBtn.Parent = bar
    collapseBtn.ZIndex = 4
    collapseBtn.AutoButtonColor = true

    local scroll = Instance.new("ScrollingFrame")
    scroll.Name = "Options"
    scroll.Size = UDim2.new(1, -12, 1, -34)
    scroll.Position = UDim2.new(0, 6, 0, 28)
    scroll.BackgroundColor3 = Color3.fromRGB(24, 24, 36)
    scroll.BackgroundTransparency = 0.02
    scroll.BorderSizePixel = 0
    scroll.ScrollBarThickness = 5
    scroll.ScrollingDirection = Enum.ScrollingDirection.Y
    scroll.CanvasSize = UDim2.new(0,0,0,0)
    scroll.AutomaticCanvasSize = Enum.AutomaticSize.Y
    scroll.ZIndex = 2
    scroll.Parent = bg
    
    local totalFrameHeight = height
    local isExpanded = false 

    scroll.Visible = false
    frame.Size = UDim2.new(0, width, 0, 26) 

    local uiList = Instance.new("UIListLayout")
    uiList.Parent = scroll
    uiList.SortOrder = Enum.SortOrder.LayoutOrder
    uiList.Padding = UDim.new(0,4)

    RunService.RenderStepped:Connect(function()
        for i,rf in ipairs(borders) do
            rf.BackgroundColor3 = rainbowColor(0.39 + (i*0.07), 1, 1)
        end
    end)

    local function toggleContent()
        isExpanded = not isExpanded
        local animationTime = 0.2

        if isExpanded then
            scroll.Visible = true
            frame:TweenSize(UDim2.new(0, width, 0, totalFrameHeight), "Out", "Quad", animationTime, true)
            collapseBtn.Text = "v"
        else
            scroll.Visible = false
            frame:TweenSize(UDim2.new(0, width, 0, 26), "Out", "Quad", animationTime, true)
            collapseBtn.Text = "â€”"
        end
    end
    
    collapseBtn.MouseButton1Click:Connect(toggleContent)

    -- LÃ³gica de Movilidad (Mantenida)
    local dragging = false
    local dragStart = Vector2.new(0, 0)
    local startPos = UDim2.new(0, 0, 0, 0)
    local viewport = game:GetService("Workspace").CurrentCamera.ViewportSize
    
    local function updatePosition(input)
        local delta = input.Position - dragStart
        local newX = startPos.X.Offset + delta.X
        local newY = startPos.Y.Offset + delta.Y
        
        newX = math.clamp(newX, 0, viewport.X - frame.Size.X.Offset)
        newY = math.clamp(newY, 0, viewport.Y - frame.Size.Y.Offset)

        frame.Position = UDim2.new(0, newX, 0, newY)
    end

    bar.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
            dragging = true
            dragStart = input.Position
            startPos = frame.Position
        end
    end)
    
    UserInputService.InputChanged:Connect(function(input)
        if dragging and (input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch) then
            updatePosition(input)
        end
    end)
    
    UserInputService.InputEnded:Connect(function(input)
        if (input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch) then
            dragging = false
        end
    end)

    local api = setmetatable({
        _sg = sg,
        _hud = frame,
        _scroll = scroll,
        _window = frame
    }, RainbowUI)
    return api
end

-- ====================================================================
-- NUEVA FUNCIÃ“N AÃ‘ADIDA: AddToggle (Calidad Premium)
-- ====================================================================

function RainbowUI:AddToggle(text, default, callback)
    local toggleFrame = Instance.new("Frame")
    toggleFrame.Name = "Toggle_" .. (text:gsub("%s+", "_"))
    toggleFrame.Size = UDim2.new(1, -8, 0, 23)
    toggleFrame.BackgroundTransparency = 1
    toggleFrame.Parent = self._scroll
    
    local state = default or false

    local label = Instance.new("TextLabel")
    label.Text = "  "..(text or "Toggle")
    label.Size = UDim2.new(1, -26, 1, 0)
    label.BackgroundTransparency = 1
    label.Font = Enum.Font.GothamSemibold
    label.TextSize = 14
    label.TextColor3 = Color3.fromRGB(210,210,255)
    label.TextXAlignment = Enum.TextXAlignment.Left
    label.Parent = toggleFrame
    
    local box = Instance.new("TextButton")
    box.Size = UDim2.new(0, 18, 0, 18)
    box.AnchorPoint = Vector2.new(1, 0.5)
    box.Position = UDim2.new(1, 0, 0.5, 0)
    box.BorderSizePixel = 0
    box.AutoButtonColor = false
    box.Font = Enum.Font.SourceSansBold -- Usamos Bold para la marca
    box.TextSize = 14
    box.Parent = toggleFrame
    box.ZIndex = 5

    -- Colores
    local COLOR_ON = Color3.fromRGB(30, 150, 50)  -- Verde de activaciÃ³n
    local COLOR_OFF = Color3.fromRGB(50, 50, 70) -- Gris oscuro (fondo)
    local TEXT_COLOR_ON = Color3.new(1, 1, 1)

    local function updateBox(newState)
        state = newState
        if state then
            box.BackgroundColor3 = COLOR_ON
            box.Text = "âœ“"
            box.TextColor3 = TEXT_COLOR_ON
        else
            box.BackgroundColor3 = COLOR_OFF
            box.Text = ""
        end
    end

    box.MouseButton1Click:Connect(function()
        updateBox(not state)
        if callback then pcall(callback, state) end
    end)
    
    updateBox(default or false) -- Aplicar estado inicial

    return {
        Frame = toggleFrame,
        SetValue = updateBox,
        GetValue = function() return state end
    }
end

-- El resto de las funciones se mantienen
function RainbowUI:AddButton(text, callback)
    local btn = Instance.new("TextButton")
    btn.Text = "  "..(text or "BotÃ³n")
    btn.Size = UDim2.new(1, -8, 0, 23)
    btn.BackgroundColor3 = Color3.fromRGB(32,32,50)
    btn.BorderSizePixel = 0
    btn.Font = Enum.Font.GothamSemibold
    btn.TextSize = 14
    btn.TextColor3 = Color3.fromRGB(210,210,255)
    btn.AutoButtonColor = true
    btn.ZIndex = 4
    btn.Parent = self._scroll
    btn.MouseButton1Click:Connect(function()
        if callback then pcall(callback) end
    end)
    return btn
end

function RainbowUI:Destroy()
    if self._sg then self._sg:Destroy() end
end

function RainbowUI:Notify(text, duration)
    duration = duration or 2
    local sg = self._sg or game:GetService("Players").LocalPlayer.PlayerGui:FindFirstChild("RainbowUI")
    if not sg then return end
    local notif = Instance.new("TextLabel")
    notif.Text = tostring(text)
    notif.Size = UDim2.new(0, 280, 0, 32)
    notif.AnchorPoint = Vector2.new(0.5, 0)
    notif.Position = UDim2.new(0.5, 0, 0, 34)
    notif.BackgroundColor3 = Color3.fromRGB(35,35,45)
    notif.BorderSizePixel = 0
    notif.Font = Enum.Font.GothamSemibold
    notif.TextSize = 16
    notif.TextColor3 = Color3.new(1,1,1)
    notif.TextStrokeTransparency = 0.7
    notif.Parent = sg
    notif.ZIndex = 999
    notif.BackgroundTransparency = 0.18
    notif.TextTransparency = 0
    notif.TextStrokeColor3 = Color3.fromRGB(0,0,0)
    notif.ClipsDescendants = true

    local border = Instance.new("Frame")
    border.Parent = notif
    border.Size = UDim2.new(1,0,0,3)
    border.Position = UDim2.new(0,0,0,0)
    border.BackgroundColor3 = Color3.fromHSV((tick()*0.47)%1,1,1)
    border.BorderSizePixel = 0
    border.ZIndex = notif.ZIndex + 1

    local rs = game:GetService("RunService")
    local conn
    conn = rs.RenderStepped:Connect(function()
        if border.Parent then
            border.BackgroundColor3 = Color3.fromHSV((tick()*0.47)%1,1,1)
        else
            conn:Disconnect()
        end
    end)

    spawn(function()
        wait(duration)
        for i=1,8 do
            notif.TextTransparency = i*0.1
            notif.BackgroundTransparency = 0.18 + i*0.09
            border.BackgroundTransparency = i*0.12
            wait(0.03)
        end
        notif:Destroy()
    end)
end

return RainbowUI
