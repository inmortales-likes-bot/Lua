--[[
  ðŸŒˆ RainbowUI (MEJORADA V3 - MOVILIDAD REPARADA)
  
  Cambios:
  - Se reescribe la lÃ³gica de arrastre (drag) para usar una tÃ©cnica mÃ¡s robusta.
  - El Ã¡rea de arrastre ahora es toda la barra del tÃ­tulo (`bar`), no solo el texto.
  - Se mantiene la estructura de Secciones y Toggles.
--]]

local RainbowUI = {}
RainbowUI.__index = RainbowUI

local SECTION_HEADER_HEIGHT = 26 

local function rainbowColor(speed, sat, val)
    sat = sat or 1
    val = val or 1
    return Color3.fromHSV((tick() * speed) % 1, sat, val)
end

local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")

-- ==============================================================================
-- 1. CONSTRUCTOR PRINCIPAL (Movilidad Modificada AquÃ­)
-- ==============================================================================

function RainbowUI:CreateWindow(width, height)
    width, height = width or 230, height or 120

    local sg = Instance.new("ScreenGui")
    sg.Name = "RainbowUI"
    sg.ResetOnSpawn = false
    sg.IgnoreGuiInset = true
    if syn and syn.protect_gui then syn.protect_gui(sg) end
    sg.Parent = game:GetService("Players").LocalPlayer.PlayerGui

    local frame = Instance.new("Frame")
    frame.Name = "MainFrame"
    frame.Size = UDim2.new(0, width, 0, height)
    frame.Position = UDim2.fromOffset(160, 180)
    frame.BackgroundTransparency = 1
    frame.Parent = sg

    -- Borders (Rainbow effect)
    local borders = {}
    for _,side in ipairs({"Top","Bottom","Left","Right"}) do
        local f = Instance.new("Frame")
        f.Parent = frame
        f.Name = side
        f.BorderSizePixel = 0
        f.ZIndex = 3
        if side=="Top" then
            f.Size, f.Position = UDim2.new(1,0,0,2), UDim2.new(0,0,0,-2)
        elseif side=="Bottom" then
            f.Size, f.Position = UDim2.new(1,0,0,2), UDim2.new(0,0,1,0)
        elseif side=="Left" then
            f.Size, f.Position = UDim2.new(0,2,1,0), UDim2.new(0,-2,0,0)
        elseif side=="Right" then
            f.Size, f.Position = UDim2.new(0,2,1,0), UDim2.new(1,0,0,0)
        end
        f.BackgroundColor3 = Color3.fromRGB(255,0,0)
        table.insert(borders, f)
    end

    local bg = Instance.new("Frame")
    bg.Name = "BG"
    bg.BackgroundColor3 = Color3.fromRGB(12, 13, 21)
    bg.BorderSizePixel = 0
    bg.Size = UDim2.new(1,0,1,0)
    bg.Position = UDim2.new(0,0,0,0)
    bg.ZIndex = 1
    bg.Parent = frame

    local bar = Instance.new("Frame")
    bar.Name = "Bar"
    bar.BackgroundColor3 = Color3.fromRGB(20, 20, 32)
    bar.Size = UDim2.new(1, 0, 0, 26)
    bar.BorderSizePixel = 0
    bar.Parent = bg
    bar.ZIndex = 2
    bar.Active = true -- Habilitar para capturar inputs

    -- BotÃ³n flotante
    local floatBtn = Instance.new("TextButton")
    floatBtn.Name = "FloatBtn"
    floatBtn.Text = "ðŸ˜ˆ"
    floatBtn.Size = UDim2.new(0, 36, 0, 36)
    floatBtn.Position = UDim2.new(0, 12, 0, 60)
    floatBtn.BackgroundColor3 = Color3.fromRGB(45, 0, 55)
    floatBtn.Visible = false
    floatBtn.BorderSizePixel = 0
    floatBtn.TextSize = 24
    floatBtn.Font = Enum.Font.GothamBold
    floatBtn.TextColor3 = Color3.fromRGB(255, 180, 255)
    floatBtn.Parent = sg
    floatBtn.ZIndex = 6

    -- TÃ­tulo
    local title = Instance.new("TextLabel")
    title.Name = "Title"
    title.Size = UDim2.new(1, -60, 1, 0)
    title.Position = UDim2.new(0, 28, 0, 0)
    title.BackgroundTransparency = 1
    title.Text = "SCRIPT ðŸ˜ˆ LUIS"
    title.Font = Enum.Font.GothamBold
    title.TextSize = 19
    title.TextStrokeTransparency = 0.8
    title.TextColor3 = Color3.fromRGB(255,255,255)
    title.TextXAlignment = Enum.TextXAlignment.Left
    title.Parent = bar
    title.ZIndex = 3

    -- BotÃ³n de esconder
    local hideBtn = Instance.new("TextButton")
    hideBtn.Name = "HideBtn"
    hideBtn.Text = "X"
    hideBtn.Size = UDim2.new(0, 22, 0, 22)
    hideBtn.AnchorPoint = Vector2.new(1, 0.5)
    hideBtn.Position = UDim2.new(1, -8, 0.5, 0)
    hideBtn.BackgroundColor3 = Color3.fromRGB(42, 0, 20)
    hideBtn.BorderSizePixel = 0
    hideBtn.TextSize = 14
    hideBtn.Font = Enum.Font.GothamBold
    hideBtn.TextColor3 = Color3.fromRGB(255,100,100)
    hideBtn.Parent = bar
    hideBtn.ZIndex = 4
    hideBtn.AutoButtonColor = true

    -- ScrollingFrame Principal (contenedor de secciones)
    local scroll = Instance.new("ScrollingFrame")
    scroll.Name = "OptionsContainer"
    scroll.Size = UDim2.new(1, -12, 1, -34)
    scroll.Position = UDim2.new(0, 6, 0, 28)
    scroll.BackgroundColor3 = Color3.fromRGB(24, 24, 36)
    scroll.BackgroundTransparency = 0.02
    scroll.BorderSizePixel = 0
    scroll.ScrollBarThickness = 5
    scroll.ScrollingDirection = Enum.ScrollingDirection.Y
    scroll.CanvasSize = UDim2.new(0,0,0,0)
    scroll.AutomaticCanvasSize = Enum.AutomaticSize.Y
    scroll.ZIndex = 2
    scroll.Parent = bg

    local uiList = Instance.new("UIListLayout")
    uiList.Parent = scroll
    uiList.SortOrder = Enum.SortOrder.LayoutOrder
    uiList.Padding = UDim.new(0,4)
    
    -- LÃ³gica Rainbow
    RunService.RenderStepped:Connect(function()
        for i,rf in ipairs(borders) do
            rf.BackgroundColor3 = rainbowColor(0.39 + (i*0.07), 1, 1)
        end
    end)

    -- >>>>>> LÃ“GICA DE MOVILIDAD CORREGIDA Y SIMPLIFICADA <<<<<<

    local dragging = false
    local dragStart = Vector2.new(0, 0)
    local startPos = UDim2.new(0, 0, 0, 0)
    local viewport = game:GetService("Workspace").CurrentCamera.ViewportSize

    local function updatePosition(input)
        local delta = input.Position - dragStart
        local newX = startPos.X.Offset + delta.X
        local newY = startPos.Y.Offset + delta.Y
        
        -- Limitar posiciÃ³n para que no salga de la pantalla (Clamping)
        newX = math.clamp(newX, -frame.Size.X.Offset + 10, viewport.X - 10)
        newY = math.clamp(newY, -frame.Size.Y.Offset + 10, viewport.Y - 10) -- Se puede ajustar a 0 si no quieres que el marco superior se salga

        frame.Position = UDim2.new(0, newX, 0, newY)
    end

    bar.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
            dragging = true
            dragStart = input.Position
            startPos = frame.Position
            
            -- Para capturar la entrada continuamente
            input.Changed:Connect(function() 
                if input.UserInputState == Enum.UserInputState.End then
                    dragging = false
                end
            end)
        end
    end)
    
    UserInputService.InputChanged:Connect(function(input)
        if dragging and (input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch) then
            updatePosition(input)
        end
    end)
    
    UserInputService.InputEnded:Connect(function(input)
        if (input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch) then
            dragging = false
        end
    end)
    
    -- LÃ³gica de esconder y reaparecer (se mantiene)
    hideBtn.MouseButton1Click:Connect(function()
        frame.Visible = false
        floatBtn.Visible = true
        floatBtn.Position = UDim2.new(0, frame.Position.X.Offset, 0, frame.Position.Y.Offset)
    end)

    floatBtn.MouseButton1Click:Connect(function()
        frame.Visible = true
        floatBtn.Visible = false
    end)


    local api = setmetatable({
        _sg = sg,
        _hud = frame,
        _scroll = scroll, 
        _window = frame
    }, RainbowUI)
    return api
end

-- ==============================================================================
-- 2. FUNCIÃ“N AÃ‘ADIDA: addSection (Carpetas Colapsables) - LÃ³gica de SecciÃ³n y Toggle se mantienen
-- ==============================================================================

function RainbowUI:AddSection(name)
    local containerFrame = Instance.new("Frame")
    containerFrame.Name = name:gsub("%s+", "_") .. "_SectionContainer"
    containerFrame.Size = UDim2.new(1, 0, 0, SECTION_HEADER_HEIGHT)
    containerFrame.BackgroundTransparency = 1
    containerFrame.Parent = self._scroll

    local uiList = Instance.new("UIListLayout")
    uiList.Parent = containerFrame
    uiList.SortOrder = Enum.SortOrder.LayoutOrder
    
    local headerButton = Instance.new("TextButton")
    headerButton.Name = "SectionHeader"
    headerButton.Size = UDim2.new(1, 0, 0, SECTION_HEADER_HEIGHT)
    headerButton.BackgroundColor3 = Color3.fromRGB(30, 30, 48)
    headerButton.BorderSizePixel = 0
    headerButton.Text = name .. "  v" 
    headerButton.Font = Enum.Font.GothamBold
    headerButton.TextSize = 16
    headerButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    headerButton.TextXAlignment = Enum.TextXAlignment.Left
    headerButton.TextWrapped = true
    headerButton.Parent = containerFrame

    local contentFrame = Instance.new("Frame")
    contentFrame.Name = "Content"
    contentFrame.Size = UDim2.new(1, 0, 0, 0)
    contentFrame.BackgroundTransparency = 1
    contentFrame.Parent = containerFrame
    contentFrame.ClipsDescendants = true 

    local contentLayout = Instance.new("UIListLayout")
    contentLayout.Parent = contentFrame
    contentLayout.SortOrder = Enum.SortOrder.LayoutOrder
    contentLayout.Padding = UDim.new(0, 4)
    
    local isExpanded = false

    local function toggleSection()
        isExpanded = not isExpanded

        local targetContentHeight = 0
        local targetTotalHeight = SECTION_HEADER_HEIGHT
        local animationTime = 0.2

        if isExpanded then
            targetContentHeight = contentLayout.AbsoluteContentSize.Y
            targetTotalHeight = SECTION_HEADER_HEIGHT + targetContentHeight
            headerButton.Text = name .. "  -"
        else
            headerButton.Text = name .. "  v"
        end

        contentFrame:TweenSize(UDim2.new(1, 0, 0, targetContentHeight), "Out", "Quad", animationTime, true)
        containerFrame:TweenSize(UDim2.new(1, 0, 0, targetTotalHeight), "Out", "Quad", animationTime, true)
    end

    headerButton.MouseButton1Click:Connect(toggleSection)
    
    contentLayout.ChildAdded:Connect(function() if isExpanded then toggleSection() toggleSection() end end)
    contentLayout.ChildRemoved:Connect(function() if isExpanded then toggleSection() toggleSection() end end)

    return setmetatable({
        _content = contentFrame,
        _container = containerFrame,
        _layout = contentLayout,
        AddButton = function(text, callback)
            return RainbowUI.AddButton(self, text, callback, contentFrame) 
        end,
        AddToggle = function(text, default, callback)
            return RainbowUI.AddToggle(self, text, default, callback, contentFrame)
        end,
    }, {__index = self})
end

-- ==============================================================================
-- 3. FUNCIONES EXISTENTES MODIFICADAS / AÃ‘ADIDAS (Se mantienen iguales)
-- ==============================================================================

function RainbowUI:AddButton(text, callback, parentFrame)
    local pFrame = parentFrame or self._scroll
    local btn = Instance.new("TextButton")
    btn.Text = "  "..(text or "BotÃ³n")
    btn.Size = UDim2.new(1, -8, 0, 23)
    btn.BackgroundColor3 = Color3.fromRGB(32,32,50)
    btn.BorderSizePixel = 0
    btn.Font = Enum.Font.GothamSemibold
    btn.TextSize = 14
    btn.TextColor3 = Color3.fromRGB(210,210,255)
    btn.AutoButtonColor = true
    btn.ZIndex = 4
    btn.Parent = pFrame
    btn.MouseButton1Click:Connect(function()
        if callback then pcall(callback) end
    end)
    return btn
end

function RainbowUI:AddToggle(text, default, callback, parentFrame)
    local pFrame = parentFrame or self._scroll
    local toggleFrame = Instance.new("Frame")
    toggleFrame.Size = UDim2.new(1, -8, 0, 23)
    toggleFrame.BackgroundTransparency = 1
    toggleFrame.Parent = pFrame
    
    local state = default or false

    local label = Instance.new("TextLabel")
    label.Text = "  "..(text or "Toggle")
    label.Size = UDim2.new(1, -26, 1, 0)
    label.BackgroundTransparency = 1
    label.Font = Enum.Font.GothamSemibold
    label.TextSize = 14
    label.TextColor3 = Color3.fromRGB(210,210,255)
    label.TextXAlignment = Enum.TextXAlignment.Left
    label.Parent = toggleFrame
    
    local box = Instance.new("TextButton")
    box.Size = UDim2.new(0, 18, 0, 18)
    box.AnchorPoint = Vector2.new(1, 0.5)
    box.Position = UDim2.new(1, 0, 0.5, 0)
    box.BorderSizePixel = 0
    box.AutoButtonColor = false
    box.Font = Enum.Font.SourceSans
    box.TextSize = 14
    box.Parent = toggleFrame

    local function updateBox(newState)
        state = newState
        if state then
            box.BackgroundColor3 = Color3.fromRGB(30, 150, 50)
            box.Text = "âœ“"
            box.TextColor3 = Color3.new(1,1,1)
        else
            box.BackgroundColor3 = Color3.fromRGB(50, 50, 70)
            box.Text = ""
        end
    end

    box.MouseButton1Click:Connect(function()
        updateBox(not state)
        if callback then pcall(callback, state) end
    end)
    
    updateBox(default or false)

    return {
        Frame = toggleFrame,
        SetValue = updateBox,
        GetValue = function() return state end
    }
end

function RainbowUI:Destroy()
    if self._sg then self._sg:Destroy() end
end

function RainbowUI:Notify(text, duration)
    -- [CÃ³digo de NotificaciÃ³n se mantiene]
    duration = duration or 2
    local sg = self._sg or game:GetService("Players").LocalPlayer.PlayerGui:FindFirstChild("RainbowUI")
    if not sg then return end
    local notif = Instance.new("TextLabel")
    notif.Text = tostring(text)
    notif.Size = UDim2.new(0, 280, 0, 32)
    notif.AnchorPoint = Vector2.new(0.5, 0)
    notif.Position = UDim2.new(0.5, 0, 0, 34)
    notif.BackgroundColor3 = Color3.fromRGB(35,35,45)
    notif.BorderSizePixel = 0
    notif.Font = Enum.Font.GothamSemibold
    notif.TextSize = 16
    notif.TextColor3 = Color3.new(1,1,1)
    notif.TextStrokeTransparency = 0.7
    notif.Parent = sg
    notif.ZIndex = 999
    notif.BackgroundTransparency = 0.18
    notif.TextTransparency = 0
    notif.TextStrokeColor3 = Color3.fromRGB(0,0,0)
    notif.ClipsDescendants = true

    local border = Instance.new("Frame")
    border.Parent = notif
    border.Size = UDim2.new(1,0,0,3)
    border.Position = UDim2.new(0,0,0,0)
    border.BackgroundColor3 = Color3.fromHSV((tick()*0.47)%1,1,1)
    border.BorderSizePixel = 0
    border.ZIndex = notif.ZIndex + 1

    local rs = game:GetService("RunService")
    local conn
    conn = rs.RenderStepped:Connect(function()
        if border.Parent then
            border.BackgroundColor3 = Color3.fromHSV((tick()*0.47)%1,1,1)
        else
            conn:Disconnect()
        end
    end)

    spawn(function()
        wait(duration)
        for i=1,8 do
            notif.TextTransparency = i*0.1
            notif.BackgroundTransparency = 0.18 + i*0.09
            border.BackgroundTransparency = i*0.12
            wait(0.03)
        end
        notif:Destroy()
    end)
end

return RainbowUI
